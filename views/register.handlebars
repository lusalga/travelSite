
 <div class="container">
     <div class="row"></div>
        
        <div class="col-sm-12">
            <!-- Masthead Heading-->
            <h1 class="formHeading" >Register </h1>
            <p>Join the Locals!</p>
        </div> 
        
        {{!-- <div class="row"></div>  EXTRA SPACE--}}
        
         <div class="col-sm-12">
            {{!-- box  --}}
            <div class="container outter shadow1 rounded-lg pt-4 mt-5 overflow-auto">
                {{!-- <div class="header p-4" style="font-size: 1.1rem; font-weight:bold">
                    <p>Choose also the frequency of newsletter.</p>
                </div> --}}

                <div class="containter-fluid body-form ">
                    <form class="form-horizontal" role = "form" 
                        action="/processRegister?form=registerSignup" method = "POST">
                        <input type = "hidden" name = "_csrf" value="{{csrf}}">
                        {{!-- entering NAME as input --}}
                        <div class="form-group">
                            <label for="fieldName" class=" form-label">
                                Name
                            </label>
                            <div class="col">
                                <input type="text" class="form-control"
                                    id="fieldName" name="name" placeholder="Name" required
                                >
                            </div>
                        </div>
                        
                        {{!-- entering EMAIL as input --}}
                        <div class="form-group">
                            <label for="fieldEmail" class="form-label" >
                                Email
                            </label>
                            <div class="col">
                                <input type="email" class="form-control" placeholder="name@example.com" required
                                    id="fieldEmail" name="email"
                                >
                            </div>
                        </div>
                         {{!-- entering COUNTRY as input --}}
                        <div class="form-group">
                            <label for="fieldCountry" class=" form-label">
                                Country
                            </label>
                            <div class="col">
                                <input type="text" class="form-control"
                                    id="fieldCountry" name="name" placeholder="Country you are at" required
                                >
                            </div>
                        </div>
                        {{!-- entering CITY as input --}}
                        <div class="form-group">
                            <label for="fieldCity" class=" form-label">
                                City
                            </label>
                            <div class="col">
                                <input type="text" class="form-control"
                                    id="fieldCity" name="city" placeholder="City you live - not required" 
                                >
                            </div>
                        </div>

                        

                        {{!-- Submitting info --}}
                        <div class="form-group">
                            <div class="col-sm-offset-2">
                            <button type="submit" class="btn btn-secondary border border-light hvr-bounce-to-right ">
                                Submit
                            </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            {{!-- END OF BOX --}}
        </div>
    </div>
 </div>